			<attribute-definition attribute-id="kpRadiusBorder">
                <display-name xml:lang="x-default">Border Radius Preference</display-name>
                <description xml:lang="x-default">Size (in pixels) of the border radius to be used in Klarna Payments iFrame</description>
                <type>string</type>
